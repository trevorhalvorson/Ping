<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="vertical"
    android:rowCount="4">

    <TextView
        android:id="@+id/num_pad_1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="1"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="2"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="3"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="4"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_5"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="5"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_6"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="6"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_7"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="7"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_8"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="8"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_9"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="9"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/num_pad_blank"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="0"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/num_pad_del"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/num_pad_item_padding"
        android:text="DEL"
        app:autoSizeTextType="uniform" />

</GridLayout>